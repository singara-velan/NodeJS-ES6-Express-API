{
  "name": "node-express-es6",
  "version": "1.0.0",
  "description": "Restful api with Express in ES6 standards",
  "engines": {
    "node": ">=6.x.x"
  },
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/index.js",
    "dev": "nodemon ./index.js --exec babel-node",
    "build": "npm run buildApi && npm run buildIndex",
    "prod": "npm run build && node dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "npm run build",
    "buildApi": "./node_modules/.bin/babel ./api --out-dir dist/api",
    "buildIndex": "./node_modules/.bin/babel ./index.js -d dist"
  },
  "author": "singa",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.1",
    "express": "^4.15.4",
    "morgan": "^1.8.2",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1"
  },
  "devDependencies": {
    "mocha": "^3.5.3",
    "nodemon": "^1.12.1"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
